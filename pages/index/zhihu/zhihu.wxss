/* pages/index/zhihu/zhihu.wxss */

page {
  background-color: #f8f8f8;
  height: 100%;
  width: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.root {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.header {
  width: 100%;
  height: 600rpx;
  margin-bottom: 10rpx;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.list {
  width: 100%;
  height: auto;
}

.list-item {
  margin-left: 3%;
  width: 94%;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 2px 1px 2px #ccc;
  align-items: center;
}

.item-title {
  flex: 10;
  height: 160rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: #333;
}

.item-img {
  flex: 4;
  margin-right: 20rpx;
  height: 160rpx;
}
